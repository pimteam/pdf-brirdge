	<?php foreach($paper_sizes as $size):
		if(!empty($cert_settings['paper_size']) and $cert_settings['paper_size'] == $size) $selected = ' selected';
		else $selected = ''; ?>
		<option value="<?php echo $size?>"<?php echo $selected?>><?php echo $size;?></option>
	<?php endforeach;?>
</select>
&nbsp;
<?php _e('Orientation:', 'pdf-bridge')?> <select name="pdf_bridge_orientation">
	<option value="" <?php if(empty($cert_settings['orientation'])) echo 'selected'?>><?php _e('Portrait', 'pdf-bridge')?></option>
	<option value="-L" <?php if(!empty($cert_settings['orientation']) and $cert_settings['orientation'] == '-L') echo 'selected'?>><?php _e('Landscape', 'pdf-bridge')?></option>
</select></p>
