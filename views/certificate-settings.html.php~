<span id="forceDownloadOption" style="display:<?php echo (!empty($cert_settings['force_download'])) ? 'inline':'none';?>"><?php _e('File name:', 'pdf-bridge')?> <input type="text" name="pdf_bridge_file_name" value="<?php echo stripslashes(@$cert_settings['file_name']);?>"></span></p>

